# vim: filetype=neomuttrc

# source default account
source ./gustaf@ankarloo.nu.neomuttrc

# Set up macros to switch accounts

macro index,pager <f1> '<sync-mailbox><enter-command>source gustaf@ankarloo.nu.neomuttrc<enter><change-folder>!<enter>;<check-stats>' "switch to gustaf@sanshi.se"
macro index,pager <f2> '<sync-mailbox><enter-command>source gustaf@sanshi.se.neomuttrc <enter><change-folder>!<enter>;<check-stats>' "switch to gustaf@sanshi.se"
